{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "docs:build": {
      "name": "docs:build",
      "command": "pnpm docs:build"
    },
    "docs:dev": {
      "name": "docs:dev",
      "command": "pnpm docs:dev"
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint"
    },
    "playground:build": {
      "name": "playground:build",
      "command": "pnpm playground:build"
    },
    "playground:dev": {
      "name": "playground:dev",
      "command": "pnpm playground:dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "playground:generate": {
      "name": "playground:generate",
      "command": "pnpm playground:generate"
    },
    "postinstall": {
      "name": "postinstall",
      "command": "pnpm postinstall"
    },
    "prepack": {
      "name": "prepack",
      "command": "pnpm prepack"
    },
    "release:major": {
      "name": "release:major",
      "command": "pnpm release:major"
    },
    "release:minor": {
      "name": "release:minor",
      "command": "pnpm release:minor"
    },
    "release:patch": {
      "name": "release:patch",
      "command": "pnpm release:patch"
    }
  }
}
